<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="4dp">

    <ImageView
        android:id="@+id/ivNewsImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_placeholder"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/news_title_background"
        tools:text="ksdb iusdg iu asd g sjg sdjg fsdgasfkjdg sjdyfgjk fkjg asgjdsf gkjg sj fsajkgs kajgkj asdkg fdksyagkjhxb vxuayge oi gldsb lcjgo fugliu gafdosyua slbd fagofiu"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16sp"

        android:paddingHorizontal="8dp"
        android:paddingTop="32dp"
        app:layout_constraintBottom_toBottomOf="@id/ivNewsImage"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newsDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"

        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivNewsImage">


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>